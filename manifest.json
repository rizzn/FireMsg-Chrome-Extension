{
	"manifest_version":3,
	"name":"FIREMSG - Burn After Reading",
	"description":"Create burn-after-read messages via firemsg.cc",
	"version":"1.0",
	"action":{
		"default_popup":"popup.html",
		"default_icon":{
			"16":"icons/logo16.png",
			"48":"icons/logo48.png",
			"128":"icons/logo128.png"
		}
	},
	"icons":{
		"16":"icons/logo16.png",
		"48":"icons/logo48.png",
		"128":"icons/logo128.png"
	},
	"permissions":["clipboardWrite"],
	"host_permissions":["https://firemsg.cc/*"]
}